prototype(Onedrop.Form.Hubspot:Component.Atom.MultiLineText) < prototype(Onedrop.Form.Hubspot:Component.Atom.DefaultFormElement) {

    @styleguide {
        title = 'MultiLineText'
        description = 'Textarea Form Element (textarea)'

        props {
            label = 'The label'
            id = 'the-id'
            class = 'form-control'
            errorClass = 'form-error'
            name = 'the-name'
            isRequired = false
        }

        propSets {
            'predefined value' {
                value = 'Aaaaaaa asdf asdf'
            }
            'With two validation errors' {
                validationErrors {
                    0 = Neos.Fusion:DataStructure {
                        code = '1221560910'
                    }
                    1 = Neos.Fusion:DataStructure {
                        code = '1221560910'
                    }
                }
            }
        }
    }

    wrapperClass = 'textarea'

    renderer = afx`
        <textarea
            id={props.id}
            class={props.class}
            name={props.name}
            required={props.isRequired}
        >
            {props.value}
        </textarea>
    `
}
